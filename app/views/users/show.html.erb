<h1> <%= @user.nickname %> </h1>
<% if current_user == @user %>
  <%= link_to "edit", edit_user_registration_path %>
<% end %>

<%= render "links", :user => @user %>

<%= will_paginate @advertisements %>
<% @advertisements.each do |ads| %>
  <hr>
  <div class="ads-container">
    <%= render 'advertisements/ads_show', :ads => ads %>
  </div>
<% end %>
